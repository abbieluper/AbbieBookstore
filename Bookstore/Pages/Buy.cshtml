@page
@model Bookstore.Pages.BuyModel
@{
}


<div style="padding-left:15px; padding-right:15px;">
    <br />
    <h2>Your Cart</h2>

    <table class="table table-bordered table-striped" style="background-color: #f2f7f2; ">

        <thead>
            <tr>
                <th>Book</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var i in Model.basket.Items)
                {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price</td>
                    <td>@(i.Quantity * i.Book.Price)</td>
                </tr>
                }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3">Total:</td>

                @*the "c" means currency but I dont think it is working on mac*@
                @*<td>@Model.basket.CalculateTotal().ToString("c")</td>*@
                <td>$@Model.basket.CalculateTotal().ToString("#,##0.00")</td>
            </tr>
        </tfoot>

    </table>

    <div>
        <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    </div>
</div>